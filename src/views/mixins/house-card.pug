mixin house-card(data)
  .house-card(class="" + data.className)
    .house-card__bg
      img(src="" + data.image.src alt="" + data.image.alt loading="lazy")
    .house-card__container
      if data.price || data.discount || data.booking
        if data.price
          .house-card__cost.house-card__cost--orange
            span= data.price
        if data.discount
          .house-card__cost.house-card__cost--red
            span= data.discount
        if data.booking
          .house-card__cost.house-card__cost--green
            span= data.booking
      .house-card__content
        .house-card__top
          a.house-card__link(href="#") 
            h4.house-card__title= data.title
          .house-card__location
            svg(width="11" height="13" viewBox="0 0 11 13")
              use(xlink:href="#svg-location")
            span= data.location
        .house-card__bottom
          if data.facilities.length > 0
            .house-card__items
              each item in data.facilities
                .house-card__item 
                  svg(width="18" height="18" viewBox="0 0 18 18")
                    use(xlink:href="#svg-" + item.icon.href)
                  span= item.title
          a(href="#").house-card__button
